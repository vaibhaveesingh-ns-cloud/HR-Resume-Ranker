{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "DOCKER_HUB_USER/hr-resume-backend:latest",
      "essential": true,
      "memory": 512,
      "portMappings": [
        { "containerPort": 8000, "hostPort": 8000 }
      ],
      "environment": [
        { "name": "PYTHONUNBUFFERED", "value": "1" }
      ]
    },
    {
      "name": "frontend",
      "image": "DOCKER_HUB_USER/hr-resume-frontend:latest",
      "essential": true,
      "memory": 256,
      "links": ["backend"],
      "portMappings": [
        { "containerPort": 80, "hostPort": 80 }
      ]
    }
  ]
}
